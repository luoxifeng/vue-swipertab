/**
* swiper-tab
*/
.swiper-tab-wrapper {
  background: #fff;
  width: 100%;
  min-height: 50px;
  overflow: hidden;
  opacity: 0;
  transition: opacity 3s ease-in-out;
}
@keyframes d {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
.swiper-tab-inner {
  position: relative;
}
.swiper-tab-header {
  position: relative;
  display: flex;
  border-bottom: 1px solid #ccc;
}
.swiper-tab-header .swiper-tab-item {
  position: relative;
  z-index: 1;
  flex: 1;
  text-align: center;
  background: #eee;
  color: #676767;
  min-height: 20px;
  cursor: pointer;
  background: linear-gradient(#bebebe, transparent, #bebebe);
  transition: color 0.5s ease-in-out;
}
.swiper-tab-header .swiper-tab-item::after {
  content: "";
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 2;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
}
.swiper-tab-header .swiper-tab-item-inner {
  padding: 10px;
}
.swiper-tab-header .swiper-tab-item.swiper-tab-item-active {
  color: #000;
}
.swiper-tab-header .swiper-tab-item.swiper-tab-item-active::after {
  opacity: 1;
  background: linear-gradient(#333, transparent, #333);
}
.swiper-tab-body {
  min-height: 50px;
}
.swiper-tab-body .swiper-tab-item {
  padding: 15px;
  display: none;
  height: 450px;
}
.swiper-tab-body .swiper-tab-item.swiper-tab-item-active {
  display: block;
}
.swiper-tab-line-wrapper {
  position: absolute;
  top: 100%;
  z-index: 10;
}
.swiper-tab-line-wrapper .swiper-tab-line-inner {
  height: 3px;
  position: relative;
  background: #8ce5be;
  display: flex;
  justify-content: center;
}
.swiper-tab-line-wrapper .swiper-tab-line-inner em {
  position: absolute;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 10px solid #8ce5be;
  bottom: 0;
}
.swiper-tab-wrapper.swiper-tab-animate .swiper-tab-body {
  display: flex;
}
.swiper-tab-wrapper.swiper-tab-animate .swiper-tab-body .swiper-tab-item {
  display: block;
  flex: 1;
}
.swiper-tab-close-btn {
  cursor: pointer;
  width: 100%;
  position: absolute;
  bottom: 20px;
  display: flex;
  justify-content: center;
}
.swiper-tab-close-btn a {
  border: 1px solid #14e432;
}
.swiper-tab-close-btn-circle a {
  display: flex;
  width: 30px;
  height: 30px;
  text-align: center;
  border-radius: 50px;
  color: #14e432;
  align-items: center;
  justify-content: center;
}
.swiper-tab-close-btn-default a {
  padding: 5px 20px;
  border-radius: 5px;
}
